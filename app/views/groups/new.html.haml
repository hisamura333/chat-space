.layout-notification
  .chat-group-form
    %h1 新規チャットグループ
    = form_for @group do |f|
      .chat-group-form__field.clearfix
        .chat-group-form__field--left
          = f.label :name,"グループ名", class: "chat-group-form__label"
        .chat-group-form__field--right
          =f.text_field :name, class: "chat-group-form__input", id: "chat_group_name", placeholder: "グループ名を入力してください"

      .chat-group-form__field.clearfix
        .chat-group-form__field--left
          = f.label :member,"チャットメンバーを追加", class: "chat-group-form__label"
        .chat-group-form__field--right
          =f.text_field :name , class: "chat-group-form__input", id: "user-search-field", placeholder: "追加したいユーザー名を入力してください"
          .chat-group-form__search.clearfix
          #user-search-result
            -@users.each do |user|
              .chat-group-user.clearfix
                %p.chat-group-user__name
                  = user.name
                %a.user-search-add.chat-group-user__btn.chat-group-user__btn--add{user_id: user.id,user_name: user.name}追加


      .chat-group-form__field.clearfix
        .chat-group-form__field--left
          = f.label :name,"チャットメンバー", class: "chat-group-form__label"
        .chat-group-form__field--right
          #chat-group-users
            #group-user.chat-group-user.clearfix
              -@users.each do |user|
                -# =f.hidden_field :group[user_ids][],user
                %p.chat-group-user__name
                  = current_user.name


        .chat-group-form__field.clearfix
          .chat-group-form__field--left
          .chat-group-form__field--right
            =f.submit value:"Save",class: "chat-group-form__action-btn"

